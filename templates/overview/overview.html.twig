
{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <img src="{{ asset('/uploads/photos/') }}{{ user.photo }}" alt="Symfony!" width="100%" height="100%"/>
            </div>
            <div class="col-sm">
                <h3>
                    {{ user.name }} {{ user.secondName }}
                </h3>
                <div>
                    <b>e-mail: </b>{{ user.email }}
                </div>
                <div>
                    <b>phone: </b>{{ user.phone }}
                </div>
                <div>
                    <b>role: </b>{{ user.id }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}




